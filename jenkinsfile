pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/krishnanaidu99/project.git' // Git repository URL
        BRANCH = 'main'                                           // Branch to checkout
        DOCKER_IMAGE_NAME = 'dockerfile'                    // Name of the Docker image
        DOCKER_CONTAINER_NAME = 'vv'            // Name of the Docker container
        PORT_MAPPING = '8000:8000'                                // Port mapping
        WORKDIR = "${WORKSPACE}"                                  // Jenkins workspace
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
             git branch: 'main', url: 'https://github.com/krishnanaidu99/project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    echo "Building Docker image: ${dockerfile}..."
                    sh "docker build -t ${dockerfile} ${WORKDIR}"
                }
            }
        }

        stage('Deploy Docker Container') {
            steps {
                script {
                    // Stop and remove any existing container
                    echo "Stopping and removing any existing container named ${vv}..."
                    sh """
                        if [ \$(docker ps -aq -f name=${vv}) ]; then
                            docker rm -f ${vv}
                        fi
                    """
                    // Run the Docker container
                    echo "Deploying container ${sln}..."
                    sh "docker run -d --name ${sln} -p 8000:8000 ${dockerfile}"
                }
            }
        }
    }
}
